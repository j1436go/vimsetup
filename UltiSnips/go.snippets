func (s *Store) All$1s() ([]*model.${1:Name}, error) {
	var `!p
n_single_lower = t[1][:1].lower()
snip.rv = n_single_lower` *model.$1
	`!p
n_lower = t[1].lower()
snip.rv = n_lower`s := make([]*model.$1, 0)

	rows, err := s.db.Query(\`
		SELECT ${2:comma separated columns} from `!p ip.rv = n_lower`s
	\`)
	if err != nil {
		return `!p ip.rv = n_lower`s, err
	}
	defer rows.Close()

	for rows.Next() {
		`!p ip.rv = n_single_lower`  = new(model.$1)
		err = rows.Scan(`!p
spl = t[2].replace(" ", "").split(",")
snip.rv = ', '.join(map(lambda s: ''.join(['&', n_single_lower, '.', s.capitalize()]), spl))
`)
		if err != nil {
			log.Println(err)
		} else {
			`!p ip.rv = n_lower`s = append(`!p ip.rv = n_lower`s, `!p ip.rv = n_single_lower`)
		}
	}
	return `!p ip.rv = n_lower`s, err
}
