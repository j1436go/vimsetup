	if id == 0 {
		return nil, fmt.Errorf("no valid id supplied: %v", id)
	}

	_, err = s.db.Exec(\`
		DELETE FROM `!p ip.rv = t[1].lower()`s WHERE id = ?
	\`, id)

	return err
